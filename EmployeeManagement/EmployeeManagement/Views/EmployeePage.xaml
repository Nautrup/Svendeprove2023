<Page x:Class="EmployeeManagement.Views.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmployeeManagement.Views"
      mc:Ignorable="d" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:viewmodel="clr-namespace:EmployeeManagement.ViewModel"
      d:DataContext="{d:DesignInstance Type=viewmodel:EmployeeViewModel}"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EmployeePage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!--Søg efter medarbejder-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.Resources>
                <Style x:Key="textBoxSearch" TargetType="TextBox">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Padding" Value="15 10" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Margin" Value="0 10" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBoxBase">
                                <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" SnapsToDevicePixels="True"
                                        BorderThickness="1" BorderBrush="#e0e6ed">
                                    <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Hidden" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border" />
                                    </Trigger>

                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <TextBlock VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                       Panel.ZIndex="1" Text="Søg her..." 
                       Visibility="{Binding ElementName=textBoxSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

            <TextBox x:Name="textBoxSearch" Style="{StaticResource textBoxSearch}" />

            <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center" 
                                   Foreground="#b0b9c6" HorizontalAlignment="Right" Margin="0 0 10 0"/>
        </Grid>


        <!--Top af page (Title, etc)-->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Medarbejder" FontSize="32" FontWeight="SemiBold" Grid.Row="1" Grid.Column="1"
                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0" />

            <Grid Grid.Row="1" Grid.Column="2">

            </Grid>
        </Grid>

        <!--Medarbejdere liste-->
        <Grid Grid.Column="1" Grid.Row="2">
            <ListView ItemsSource="{Binding UserCollection}" DisplayMemberPath="FullName"
                      SelectedItem="{Binding SelectedUser}" SelectionMode="Single" >

            </ListView>
        </Grid>

        <!--Medarbejder-->
        <Grid Grid.Column="2" Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="White" Margin="5">
                <TabControl TabStripPlacement="Top" FontSize="12" FontWeight="SemiBold" >
                    <!--Medarbejder information-->
                    <TabItem Header="Information" Width="120" >

                        <Grid>

                            <!--Data-->
                            <StackPanel>
                                <!--Navn, mellemnavn og efternavn -->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Navn" VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Text="{Binding SelectedUser.FirstName}" Height="25" />


                                    <TextBlock Grid.Column="2" Text="Mellemnavn:" VerticalAlignment="Center"  Margin="5 0 0 0" />
                                    <TextBox Grid.Column="3" Text="{Binding SelectedUser.MiddleName}" Height="25" />

                                    <TextBlock Grid.Column="4" Text="Efternavn:" VerticalAlignment="Center"   Margin="5 0 0 0"/>
                                    <TextBox Grid.Column="5" Text="{Binding SelectedUser.LastName}"  Height="25" />

                                </Grid>

                                <!--Email-->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Email:" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding SelectedUser.Email}" Grid.Column="1" Height="25" />
                                </Grid>

                                <!--Alder-->
                                <Grid VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Alder:" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding SelectedUser.Age}" Grid.Column="1" Height="25" />
                                </Grid>


                                <!--Ansættelses dato-->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Ansættelses dato:" TextWrapping="Wrap" />
                                    <DatePicker Grid.Column="1" Text="{Binding SelectedUser.FirstDateOfEmployment}"  Height="25" />

                                    <TextBlock  Grid.Column="2" Text="Sidste ansættelses dato:" TextWrapping="Wrap" 
                                                Margin="5 0 0 0"/>
                                    <DatePicker Grid.Column="3" Text="{Binding SelectedUser.LastDateOfEmployement}"  Height="25" />
                                </Grid>

                                <!--Sidste ansættelses dato-->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                </Grid>

                                <!--Lokation-->
                                <Grid VerticalAlignment="Bottom" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="auto" />
                                      
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Afdeling:" VerticalAlignment="Center" />
                                    <ListView ItemsSource="{Binding LocationCollection}" DisplayMemberPath="Name"  Grid.Column="1"
                                              Height="25" >

                                    </ListView>
                                    
                                    <Button Style="{StaticResource addNewMemeberButton}" Margin="5,0,0,0" Grid.Column="2"
                                            Width="50" Height="25">
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="12" Height="12" />
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!--Firma-->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Firma:" VerticalAlignment="Center" />
                                    <ListView ItemsSource="{Binding CompanyCollection}" DisplayMemberPath="Name"  Grid.Column="1"
                                              SelectedItem="{Binding SelecedCompany, UpdateSourceTrigger=PropertyChanged}"
                                               >
                                     
                                    </ListView>
                                    
                                    <Button Style="{StaticResource addNewMemeberButton}" Margin="5,0,0,0" Grid.Column="2"
                                            Width="50" Height="25">
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="12" Height="12" />
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!--Billede-->
                                <Grid VerticalAlignment="Top" Margin="0 5 0 5">

                                    <StackPanel Grid.Column="1">
                                        <!--Profil billede-->
                                        <Grid VerticalAlignment="Top">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="25" />
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Billede" />
                                            <Border BorderThickness="1" Width="150" Height="150" HorizontalAlignment="Left" Grid.Row="1" Background="OrangeRed">
                                                <Image Width="150" Height="150" Source="/Resources/defaultuser.png" >

                                            </Image>
                                            </Border>
                                        </Grid>

                                        <!--Upload billed-->
                                        <Grid VerticalAlignment="Top" Margin="0 5 0 5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Style="{StaticResource addNewMemeberButton}" Margin="5,0,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left" >
                                                <StackPanel Orientation="Horizontal">
                                                    <Icon:PackIconMaterial Kind="Upload" VerticalAlignment="Center" Width="12" Height="12" Margin="0 1 8 0" />
                                                    <TextBlock Text="Upload" />
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!--Actions-->
                            <Grid VerticalAlignment="Bottom" Margin="0 5 0 5" >
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource addNewMemeberButton}" Command="{Binding UpdateUserInformationCommand}" Margin="5 0 5 0" >
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="ContentSave" VerticalAlignment="Center" Width="12" Height="12" Margin="0 1 8 0" />
                                            <TextBlock Text="Gem ændringer" />
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource addNewMemeberButton}" Command="{Binding ShowCreateWindowCommand}" Margin="5 0 5 0">
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="12" Height="12" Margin="0 1 8 0" />
                                            <TextBlock Text="Opret medarbejder" />
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource addNewMemeberButton}" Command="{Binding CancelCommand}" Margin="5 0 5 0">
                                        <StackPanel Orientation="Horizontal">
                                            <Icon:PackIconMaterial Kind="CloseCircle" VerticalAlignment="Center" Width="12" Height="12" Margin="0 1 8 0" />
                                            <TextBlock Text="Fortryd" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </Grid>


                        </Grid>
                    </TabItem>

                    <!--Vagtplan-->
                    <TabItem Header="Vagtplan" Width="120" >
                        <!--<local:EmployeeWorkplanControl DataContext="" />-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*"  />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Grid.ColumnSpan="7" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Background="Transparent">
                                        <CalendarButton Content="Day"  Background="Transparent" Width="50" Height="35" BorderThickness="0 0 0 0.5"/>
                                        <CalendarButton Content="Week" Background="Transparent" Width="50" Height="35" BorderThickness="0 0 0 0.5" />
                                        <CalendarButton Content="Month"  Background="Transparent" Width="50" Height="35" BorderThickness="0 0 0 0.5"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Forrige uge" Grid.Column="0"   />
                                    <Button Content="Næste uge"  Grid.Column="1"/>
                                </Grid>
                            </Grid>

                            <!--Mandag-->
                            <StackPanel Grid.Column="0" Grid.Row="1">
                                <TextBlock Text="Mandag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="{Binding CurrentWeekStartDate.Date, StringFormat='dd/MM/y'}" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />

                            </StackPanel>

                            <!--Tirsdag-->
                            <StackPanel Grid.Column="1" Grid.Row="1">
                                <TextBlock Text="Tirsdag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="25/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Onsdag-->
                            <StackPanel Grid.Column="2" Grid.Row="1">
                                <TextBlock Text="Onsdag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="26/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Torsdag-->
                            <StackPanel Grid.Column="3" Grid.Row="1">
                                <TextBlock Text="Torsdag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="27/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Fredag-->
                            <StackPanel Grid.Column="4" Grid.Row="1">
                                <TextBlock Text="Fredag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="28/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Lørdag-->
                            <StackPanel Grid.Column="5" Grid.Row="1">
                                <TextBlock Text="Lørdag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="29/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Søngdag-->
                            <StackPanel Grid.Column="6" Grid.Row="1">
                                <TextBlock Text="Søndag" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>

                                <TextBlock Text="30/05" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    FontSize="14" FontWeight="SemiBold" />
                            </StackPanel>

                            <!--Mandag ITEMS-->
                            <Grid Grid.Column="0" Grid.Row="2">
                                <ListView ItemsSource="{Binding TimeEntriesCollection}" >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Start, StringFormat='hh\\:mm'}" Width="50" />
                                                <TextBlock Text=" -> " Width="30" />
                                                <TextBlock Text="{Binding End, StringFormat='hh\\:mm'}" Width="50" />
                                                <TextBlock Text="{Binding Duration}" Width="auto" />
                                                <TextBlock Text="T" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                </ListView>
                            </Grid>

                            <!--Tirsdag ITEMS-->
                            <Grid Grid.Column="1" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 14:00 - 21:30"></ListViewItem>

                                </ListView>
                            </Grid>

                            <!--Onsdag ITEMS-->
                            <Grid Grid.Column="2" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 14:00 - 21:30"></ListViewItem>

                                </ListView>
                            </Grid>

                            <!--Torsdag ITEMS-->
                            <Grid Grid.Column="3" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 14:00 - 21:30"></ListViewItem>

                                </ListView>
                            </Grid>

                            <!--Fredag ITEMS-->
                            <Grid Grid.Column="4" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 08:00 - 14:30"></ListViewItem>

                                </ListView>
                            </Grid>
                            <!--Lørdag ITEMS-->
                            <Grid Grid.Column="5" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 14:00 - 21:30"></ListViewItem>

                                </ListView>
                            </Grid>
                            <!--Søndag ITEMS-->
                            <Grid Grid.Column="6" Grid.Row="2">
                                <ListView >
                                    <ListViewItem Content="WORK AT: 14:00 - 21:30"></ListViewItem>

                                </ListView>
                            </Grid>

                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>



        </Grid>
    </Grid>
</Page>
